doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title items registered
    // cdn bootstrap css
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/renderBabies.css')
  body
    #logo-nav-parent.text-bg-light 
      #logo-div.text-success.text-bg-light 
        h4.text-bg-success DayStar day care Kindergarten 
      div(w3-include-html='/includes-navbar/navbar.html')
    .container-fluid
      h1.text-center.my-6 Procurement List Of Items Registered
      table.table.table-striped
        thead
          tr
            th Date Purchased:
            th Vendor:
            th Name of Item Purchased:
            th Item ID:
            th Item Quantity:
            th Item Unit Price(UGX):
            th Measurement (kgs/ltrs/dolls/pcs/packets):
            th Total Price of Item (UGX):
            th Status:
            th Available:
            th Finished:
            th Update:
            th Delete:
        tbody
          if items.length 
            each item in items
              tr
                td #{item.datePurchased}
                td #{item.vendor}
                td #{item.itemName}
                td #{item.itemId}
                td #{item.itemQuantity}
                td #{item.itemUnitPrice}
                td #{item.measurement}
                td #{item.totalPrice}
                td #{item.status} 
                td 
                  a.btn.btn-primary.btn-block.btn-secondary(href= "/itemAvailable/"+ item._id) Available
                td 
                  a.btn.btn-primary.btn-block.btn-dark.text-light(href= "/itemFinished/"+ item._id) Finished 
                td 
                  a.btn.btn-primary.btn-block.btn-success(href= "/procurementUpdate/"+ item._id) Update
                td 
                  form(method="POST" action="/deleting")
                    input(type="hidden" name="id" value=item._id)
                    button.btn.btn-danger(type="submit") Delete
                    
