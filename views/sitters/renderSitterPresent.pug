doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title list clock-in registered
    // cdn bootstrap css
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/renderBabies.css')
  body
    #logo-nav-parent.text-bg-light 
      #logo-div.text-success.text-bg-light 
        h4.text-bg-success DayStar day care Kindergarten 
      div(w3-include-html='/includes-navbar/navbar.html')
    .container-fluid
      h1.text-center.my-6 Sitters Present
      table.table.table-striped
        thead
          tr
            th Name
            th contact
            th Arrival Time
            th Status
            th Sitter Number:
            
        tbody
          if sitters.length 
            each sitter in sitters
              tr
                td #{sitter.name}
                td #{sitter.contact}
                td #{sitter.arrivalTime}
                td #{sitter.status}
                td #{sitter.sitterNumber}   
                 
              
                    
    #footer.footer.text-center.text-light.p-3
      .fid_box1
        h3 Find us
        ul.location_icon
          li
            a(href='#')
              i.fa.fa-map-marker(aria-hidden='true')
            br
            |  kabalagala
          li
            a(href='#')
              i.fa.fa-phone(aria-hidden='true')
            br
            |                  (+71) 1234567890
            br
            |  (+71) 1234567890
          li
            a(href='#')
              i.fa.fa-envelope(aria-hidden='true')
            br
            |  demo@gmail.com
