        .container.mt-5
          .row.justify-content-center
            .col-md-6
              .card
                .card-body
                  h4.card-title.text-center Revenue Form
                  form
                    .mb-3
                    .mb-3
                      label.form-label(for='date') Date
                      input#date.form-control(type='date' placeholder='Enter Per Date' name='date')
                    .mb-3
                      label(for='category') Category:
                      select#category(name='category')
                        option(value='') Select Category
                        option(value='male') Babies
                        option(value='female') Doll Stall
                        option(value='other') Donations
                        option(value='other') Others
                    .mb-3
                      label.form-label(for='totalPayment') Total Payment Collected
                      input#totalPayment.form-control(type='number' placeholder='Enter Total Payment' name='totalPayment')
                    .mb-3
                      label.form-label(for='day') Per Day
                      input#day.form-control(type='number' placeholder='Enter Per Day' name='day')
                    .mb-3
                      label.form-label(for='week') Per Week
                      input#week.form-control(type='number' placeholder='Enter Per Week' name='week')
                    .mb-3
                      label.form-label(for='month') Per Month
                      input#month.form-control(type='number' placeholder='Enter Per Month' name='month')
                    .mb-3
                      label.form-label(for='comment') Comment
                      input#comment.form-control(type='text' placeholder='Comment' name='comment' readonly='')
                    button.btn.btn-success(type='submit') Submit
