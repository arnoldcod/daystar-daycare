doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title create new user
  // cdn bootstrap css
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='./css/signup.css')
main#main-div.main-div
  #logo-nav-parent.text-bg-success
    #logo-div.text-color
    #welcome.welcome.text-color.text-bg-success
      a.sidebar-link.text-bg-success(href='/welcome')
            | Welcome to DayStar daycare &amp; Kindergarten
    #navbar
      div(w3-include-html='/includes-navbar/navbar.html')
  #row1-right
    #row1-right-bottom
      // content
      .container
        h1 Create Account
        form#registrationForm(onsubmit='return validation(event)' name='validationForm' action= '/createAccount' method='POST')
          .form-group
            label(for='fullname') Full Name:
            input#name(type='text' name='name')
            small#nameError
          .form-group
            label(for='dob') Date Of Birth:
            input#dob(type='date' name='dob')
            small#dobError
          .form-group
            label(for='email') E-mail:
            input#email(type='email' name='email')
            small#emailError
          .form-group
            label(for='password') Password:
            input#password(type='text' name='password')
            small#passwordError
          .form-group
            label(for='gender') Gender:
            select#gender(name='gender')
              option(value='') Select Gender
              option(value='male') Male
              option(value='female') Female
            small#genderError
          .form-group
            label(for='contact') Contact:
            input#contact(type='text' name='contact')
            small#contactError
          .form-group
            label(for='address') Address:
            input#address(type='text' name='address')
            small#addressError
          .form-group
            label(for='nin') NIN:
            input#nin(type='text' name='nin')
            small#ninError
          .form-group
            label(for='recommenderName') Recommender&apos;s Name:
            input#recommenderName(type='text' name='recommenderName')
            small#recommenderNameError
          .form-group
            label(for='religion') Religion(Option):
            input#religion(type='text' name='religion')
            small#religionError
          .form-group
            label(for='levelOfEducation') Level of Education:
            input#levelOfEducation(type='text' name='levelOfEducation')
            small#levelOfEducationError
          input.text-bg-success(type='submit' value='Register')

  #footer
    .fid_box1
      h3 Find us
      ul.location_icon
        li
          a(href='#')
            i.fa.fa-map-marker(aria-hidden='true')
          br
          |  kabalagala
        li
          a(href='#')
            i.fa.fa-phone(aria-hidden='true')
          br
          |                      (+71) 1234567890
          br
          |  (+71) 1234567890
        li
          a(href='#')
            i.fa.fa-envelope(aria-hidden='true')
          br
          |  demo@gmail.com
