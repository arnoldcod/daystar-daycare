  .main
    nav.navbar.navbar-expand.px-3.border-bottom
      button#sidebar-toggle.btn(type='button')
        span.navbar-toggler-icon
      .navbar-collapse.navbar
        ul.navbar-nav
          li.nav-item.dropdown
            a.nav-icon.pe-md-0(href='#' data-bs-toggle='dropdown')
              img.avatar.img-fluid.rounded(src='/images/lady-teacher.jpeg' alt='')
            .dropdown-menu.dropdown-menu-end
              a.dropdown-item(href='/welcome') Logout
    main.content.px-3.py-2
      .container-fluid
      h1.text-center.my-6.text-bg-success.text-light Available Items 
      table.table.table-striped
        thead
          tr
            th Vendor:
            th Name of Item Purchased:
            th Item ID:
            th Item Quantity:
            th Status:
            th Delete
        tbody
          if items.length 
            each item in items
              tr
                td #{item.vendor}
                td #{item.itemName}
                td #{item.itemId}
                td #{item.itemQuantity}
                td #{item.status} 
                td 
                    form(method="POST" action="/deleting")
                    input(type="hidden" name="id" value=item._id)
                    button.btn.btn-block.i.bi.bi-trash3.btn-danger(type="submit")
        

    a.theme-toggle(href='#')
      i.fa-regular.fa-moon
      i.fa-regular.fa-sun
    footer.footer
      .container-fluid
        .row.text-muted
          .col-6.text-start
            p.mb-0
              a.text-muted(href='#')
                strong
                  p &copy; 2024 All Rights Reserved. DayStar Daycare &amp; kindergarten 
          .col-6.text-end
            ul.list-inline
              li.list-inline-item
                a.text-muted(href='#') Contact
              li.list-inline-item
                a.text-muted(href='#') About Us
              li.list-inline-item
                a.text-muted(href='#') Terms
