doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Sitters Registered
    // cdn bootstrap css
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/renderBabies.css')
  body
    #logo-nav-parent.text-bg-light 
      #logo-div.text-success.text-bg-light 
        h4.text-bg-success DayStar day care Kindergarten 
      div(w3-include-html='/includes-navbar/navbar.html')
    .container-fluid
      h1.text-center.my-6 List Of Sitters Registered
      table.table.table-striped
        thead
          tr
            th Name
            th Gender
            th Contact
            th Address:
            th NIN:
            th Recommender's Name:
            th Religion:
            th Level Of Eduction:
            th Sitter Number:
            th Paid Fee(UGX):
            th Status:
            th Present:
            th Absent:
            th Update:
            th Delete:
        tbody
          if sitters.length 
            each sitter in sitters 
              tr
                td #{sitter.name}
                td #{sitter.gender}
                td #{sitter.contact}
                td #{sitter.address}
                td #{sitter.nin}
                td #{sitter.recommenderName}
                td #{sitter.religion}
                td #{sitter.levelOfEducation}
                td #{sitter.sitterNumber}
                td #{sitter.paidFee}
                td #{sitter.status} 
                td 
                  a.btn.btn-primary.btn-block.btn-secondary(href= '/sitterPresentRoute/'+sitter._id) Present
                td 
                  a.btn.btn-primary.btn-block.btn-dark(href= "/sitterAbsentRoute/"+sitter._id) Absent   
                td 
                  a.btn.btn-primary.btn-block.btn-success(href= "/sittersUpdate/"+ sitter._id) Update
                td 
                  form(method="POST" action="/deleted")
                    input(type="hidden" name="id" value= sitter._id)
                    button.btn.btn-danger(type="submit") Delete
                    
