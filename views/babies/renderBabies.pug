doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Babies registered
    // cdn bootstrap css
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/renderBabies.css')
  body
    #logo-nav-parent.text-bg-light 
      #logo-div.text-success.text-bg-light 
        h4.text-bg-success DayStar day care Kindergarten 
      div(w3-include-html='/includes-navbar/navbar.html')
    .container-fluid
      h1.text-center.my-6 List Of Children Registered
      table.table.table-striped
        thead
          tr
            th Name
            th Date Of Birth
            th Age
            th Gender
            th Parent Names
            th Contact
            th Address
            th Paid Fee(UGX):
            th Child Number:
            th Status:
            th Clock-In:
            th Clock-Out:
            th Update:
            th Delete:
        tbody
          if babies.length 
            each baby in babies
              tr
                td #{baby.name}
                td #{moment(baby.dob).format("DD-MM-YY")}
                td #{baby.age}
                td #{baby.gender}
                td #{baby.parentNames}
                td #{baby.contact}
                td #{baby.address}
                td #{baby.paidFee}
                td #{baby.childNumber}
                td #{baby.status} 
                td 
                  a.btn.btn-primary.btn-block.btn-secondary(href= "/babyClockIn/"+ baby._id) Clock-in
                td 
                  a.btn.btn-primary.btn-block.btn-dark.text-light(href= "/ClockingOut/"+ baby._id) Clock-Out   
                td 
                  a.btn.btn-primary.btn-block.btn-success(href= "/babiesUpdate/"+ baby._id) Update
                td 
                  form(method="POST" action="/delete")
                    input(type="hidden" name="id" value=baby._id)
                    button.btn.btn-danger(type="submit") Delete
                    
                    
