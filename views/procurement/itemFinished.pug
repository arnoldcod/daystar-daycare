      h4   DayStar day care Kindergarten 
    #navbar
      div(w3-include-html='/includes-navbar/navbar.html')
  #row1
    div(id='row1-left clearfix')
      a.btn.btn-primary.text-bg-success.p-2(data-bs-toggle='offcanvas' href='#offcanvasExample' role='button' aria-controls='offcanvasExample')
        | Open Dashboard
      #offcanvasExample.offcanvas.offcanvas-start(tabindex='-1' aria-labelledby='offcanvasExampleLabel')
        .offcanvas-header
          h2#offcanvasExampleLabel.offcanvas-title Administration
          button.btn-close(type='button' data-bs-dismiss='offcanvas' aria-label='Close')
        .offcanvas-body.text-bg-success.p-3
          div
            .card(style='width: 18rem;')
              img.card-img-top(src='/images/lady-teacher.jpeg' alt='...')
              .card-body
                h5.card-title Head Teacher
                p.card-text Ms. Ahumuza Diana
          .dropdown.mt-3
            button.btn.btn-secondary.dropdown-toggle(type='button' data-bs-toggle='dropdown')
              | Manage Babies
            ul.dropdown-menu
              li
                a.dropdown-item.text-bg-light(href='/pages/babies/babies.html') Register new baby
              li
                a.dropdown-item.text-bg-success(href='#') view all babies
              li
                a.dropdown-item.text-bg-success(href='#') Update baby details 
              li
                a.dropdown-item.text-bg-success(href='#') Record baby departure.
          .dropdown.mt-3
            button.btn.btn-secondary.dropdown-toggle(type='button' data-bs-toggle='dropdown')
              | Manage Sitters
            ul.dropdown-menu
              li
                a.dropdown-item.text-bg-light(href='/pages/sitters/sitters.html') View all sitters
              li
                a.dropdown-item.text-bg-success(href='#') Add new sitter
              li
                a.dropdown-item.text-bg-success(href='#') Edit sitter details
              li
                a.dropdown-item.text-bg-success(href='#') Remove sitter details
          .dropdown.mt-3
            button.btn.btn-secondary.dropdown-toggle(type='button' data-bs-toggle='dropdown')
              | Manage Payments
            ul.dropdown-menu
              li
                a.dropdown-item.text-bg-light(href='/pages/payments/payments.html') View payment history
              li
                a.dropdown-item.text-bg-success(href='#') Make payment
              li
                a.dropdown-item.text-bg-success(href='#') Generate monthly invoices
          .dropdown.mt-3
            button.btn.btn-secondary.dropdown-toggle(type='button' data-bs-toggle='dropdown')
              | Manage Procurement
            ul.dropdown-menu
              li
                a.dropdown-item.text-bg-light(href='/pages/procurement/procurement.html') view procurement itemss
              li
                a.dropdown-item.text-bg-success(href='#') Add new procurement item
              li
                a.dropdown-item.text-bg-success(href='#') Update procurement item
              li
                a.dropdown-item.text-bg-success(href='#') Remove procurement item
          .dropdown.mt-3
            button.btn.btn-secondary.dropdown-toggle(type='button' data-bs-toggle='dropdown')
              | Reports &amp; Analytics
            ul.dropdown-menu
              li
                a.dropdown-item.text-bg-light(href='/pages/reports-analytics/reports-analytics.html') Generate daily report
              li
                a.dropdown-item.text-bg-success(href='#') Generate monthly report 
              li
                a.dropdown-item.text-bg-success(href='#') Generate custom reports
    #row1-right
      #row1-right-bottom
        // content
        .container
          h1 Procurement For Finished Items
          form#registrationForm(action="/itemFinished?id="+ item._id  method='POST')
            .mb-3
              label.form-label(for='vendor') Vendor:
              input#vendor.form-control(type='text' name='vendor' value= item.vendor)
            .mb-3
              label.form-label(for='itemName') Name of Item Purchased:
              input#itemName.form-control(type='text' name='itemName' value= item.itemName)
            .mb-3
              label.form-label(for='itemId') Item ID:
              input#itemId.form-control(type='text' name='itemId' value= item.itemId)
            .row
              .col-md-6.mb-3
                label.form-label(for='itemQuantity') Item Quantity:
                input#itemQuantity.form-control(type='number' name='itemQuantity' value= item.itemQuantity)
            button.btn.btn-success(type='submit') Submit

