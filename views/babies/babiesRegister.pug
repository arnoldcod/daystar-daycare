              a.sidebar-link(href='/welcome') Logout
            li.sidebar-item
              a.sidebar-link(href='/createAccount') Register Admin
  .main
    nav.navbar.navbar-expand.px-3.border-bottom
      button#sidebar-toggle.btn(type='button')
        span.navbar-toggler-icon
      .navbar-collapse.navbar
        ul.navbar-nav
          li.nav-item.dropdown
            a.nav-icon.pe-md-0(href='#' data-bs-toggle='dropdown')
              img.avatar.img-fluid.rounded(src='/images/lady-teacher.jpeg' alt='')
            .dropdown-menu.dropdown-menu-end
              a.dropdown-item(href='/welcome') Logout
    main.content.px-3.py-2
      .container-fluid
        // Content
        .container
          h1 Register Baby
          form#registrationForm(onsubmit=' ' action='/babiesRegister' method='POST')
            .form-group
              label(for='name') Full Name:
              input#fullname(type='text' name='name' placeholder='Enter Full Name')
              small#fullnameerror
            .form-group
              label(for='dob') Date of Birth:
              input#dob(type='date' name='dob')
              small#dobError
            .form-group
              label(for='age') Age:
              input#age(type='number' name='age' placeholder='Enter Age')
              small#ageError
            .form-group
              label(for='gender') Gender:
              select#gender(name='gender')
                option(value='') Select Gender
                option(value='male') Male
                option(value='female') Female
                option(value='other') Other
            .form-group
              label(for='parentNames') Parent Name:
              input#parentName(type='text' name='parentNames' placeholder='Enter Parent Name')
              small#parentNameError
            .form-group
              label(for='contact') Parent Contact:
              input#parentContact(type='text' name='contact' placeholder='0712345678')
              small#parentContactError
            .form-group
              label(for='address') Address:
              input#address(type='text' name='address' placeholder='Enter Address')
              small#addressError
            .form-group
              label(for='childNumber') Child Number:
              input#childNumber(type='text' name='childNumber' placeholder='Child Number')
              small#childNumberError
              p
            button.btn.btn-success#register(type='submit' value='Register') Submit
    a.theme-toggle(href='#')
      i.fa-regular.fa-moon
      i.fa-regular.fa-sun
    footer.footer
      .container-fluid
        .row.text-muted
          .col-6.text-start
            p.mb-0
              a.text-muted(href='#')
                strong
                  p &copy; 2024 All Rights Reserved. DayStar Daycare &amp; kindergarten 
          .col-6.text-end
            ul.list-inline
              li.list-inline-item
                a.text-muted(href='#') Contact
              li.list-inline-item
                a.text-muted(href='#') About Us
              li.list-inline-item
                a.text-muted(href='#') Terms
