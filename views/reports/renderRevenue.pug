doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Revenue list
    // cdn bootstrap css
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/renderBabies.css')
  body
    #logo-nav-parent.text-bg-light 
      #logo-div.text-success.text-bg-light 
        h4.text-bg-success DayStar day care Kindergarten 
      div(w3-include-html='/includes-navbar/navbar.html')
    .container-fluid
      h1.text-center.my-6 Revenue List
      table.table.table-striped
        thead
          tr
            th Date
            th Category
            th Total Payment Collected (UGX)
            th Per Day
            td Comment 
        tbody
          if revenues.length 
            each revenue in revenues
              tr
                td #{revenue.date}
                td #{revenue.category}
                td #{revenue.totalPayments}
                td #{revenue.day}
                td #{revenue.comment}   
              
                    
    #footer.footer.text-center.text-light.p-3
      .fid_box1
        h3 Find us
        ul.location_icon
          li
            a(href='#')
              i.fa.fa-map-marker(aria-hidden='true')
            br
            |  kabalagala
          li
            a(href='#')
              i.fa.fa-phone(aria-hidden='true')
            br
            |                  (+71) 1234567890
            br
            |  (+71) 1234567890
          li
            a(href='#')
              i.fa.fa-envelope(aria-hidden='true')
            br
            |  demo@gmail.com
