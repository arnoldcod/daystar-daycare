  .main
    nav.navbar.navbar-expand.px-3.border-bottom
      button#sidebar-toggle.btn(type='button')
        span.navbar-toggler-icon
      .navbar-collapse.navbar
        ul.navbar-nav
          li.nav-item.dropdown
            a.nav-icon.pe-md-0(href='#' data-bs-toggle='dropdown')
              img.avatar.img-fluid.rounded(src='/images/lady-teacher.jpeg' alt='')
            .dropdown-menu.dropdown-menu-end
              a.dropdown-item(href='/dashboard') Home
              a.dropdown-item(href='/welcome') Contact
              a.dropdown-item(href='/logout') Logout
    main.content.px-3.py-2
      .container-fluid
        // Content
        .container
          h1  Form  for Items Finished
          form#registrationForm(action="/itemFinished?id="+ item._id  method='POST')
            .mb-3
              label.form-label(for='vendor') Vendor:
              input#vendor.form-control(type='text' name='vendor' value= item.vendor)
            .mb-3
              label.form-label(for='itemName') Name of Item Purchased:
              input#itemName.form-control(type='text' name='itemName' value= item.itemName)
            .mb-3
              label.form-label(for='itemId') Item ID:
              input#itemId.form-control(type='text' name='itemId' value= item.itemId)
            .row
              .col-md-6.mb-3
                label.form-label(for='itemQuantity') Item Quantity:
                input#itemQuantity.form-control(type='number' name='itemQuantity' value= item.itemQuantity)
            .form-group
              input#status(type="hidden" name="status" value="Finished")
            .mb-3
              label.form-label(for='comment') Comment:
              input#comment.form-control(type='text' name='comment' value= item.comment)
            button.btn.btn-success(type='submit') Submit
            
    a.theme-toggle(href='#')
      i.fa-regular.fa-moon
      i.fa-regular.fa-sun
    footer.footer
      .container-fluid
        .row.text-muted
