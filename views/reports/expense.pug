  .main
    nav.navbar.navbar-expand.px-3.border-bottom
      button#sidebar-toggle.btn(type='button')
        span.navbar-toggler-icon
      .navbar-collapse.navbar
        ul.navbar-nav
          li.nav-item.dropdown
            a.nav-icon.pe-md-0(href='#' data-bs-toggle='dropdown')
              img.avatar.img-fluid.rounded(src='/images/lady-teacher.jpeg' alt='')
            .dropdown-menu.dropdown-menu-end
              a.dropdown-item(href='/dashboard') Home
              a.dropdown-item(href='/welcome') Contact
              a.dropdown-item(href='/logout') Logout
    main.content.px-3.py-2
      .container
        // Content
        h1.mb-4 Expense Register Form
        form#registrationForm(action='/expense' method='POST')
            .mb-3
            label.form-label(for='date') Date
            input#date.form-control(type='date' name='date' required='')
            .mb-3
            label.form-label(for='category') Category
            select#category.form-select( name= 'category' required='')
                option(value='') Select Category
                option(value='Staff Payment') Staff Paymment
                option(value='Invetory') Inventory
                option(value='DayCare Maintainance') School Maintainance 
                option(value='others') Others
            .mb-3
            label.form-label(for='totalExpense') Total Expense Per Day (UGX)
            input#totalIncome.form-control(type='number' name='totalExpense' required='')
            .mb-3
            label.form-label(for='comment') Comment
            input#comment.form-control(type='text' name='comment' required='')
            button.btn.btn-success.btn-submit(type='submit') Submit
            

    a.theme-toggle(href='#')
      i.fa-regular.fa-moon
      i.fa-regular.fa-sun
    footer.footer
      .container-fluid
        .row.text-muted
          .col-6.text-start
            p.mb-0
              a.text-muted(href='#')
                strong
                  p &copy; 2024 All Rights Reserved. DayStar Daycare &amp; kindergarten 
          .col-6.text-end
            ul.list-inline
              li.list-inline-item
                a.text-muted(href='#') Contact
              li.list-inline-item
                a.text-muted(href='#') About Us
              li.list-inline-item
                a.text-muted(href='#') Terms
