doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Admin Dashboard
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css')
  script(src='https://kit.fontawesome.com/ae360af17e.js' crossorigin='anonymous')
  link(rel='stylesheet' href='/css/income.css')
.wrapper
  aside#sidebar.js-sidebar.bg-dark
    // Content For Sidebar
    .h-100
      .sidebar-logo
        a(href='#') DayStar DayCare
      ul.sidebar-nav
        li.sidebar-header
          |
        li.sidebar-item
          a.sidebar-link.text-bg-success(href='dashboard')
            i.fa-solid.fa-list.pe-2
            |                             Dashboard
        li.sidebar-item
          a.sidebar-link.collapsed.text-bg-light(href='#' data-bs-target='#pages' data-bs-toggle='collapse' aria-expanded='false')
            i.fa-solid.fa-file-lines.pe-2
            |                            Manage  Babies
          ul#pages.sidebar-dropdown.list-unstyled.collapse(data-bs-parent='#sidebar')
            li.sidebar-item
              a.sidebar-link(href='/babiesRegister') Register new Baby
            li.sidebar-item
              a.sidebar-link(href='/babies') View All Baby
            li.sidebar-item
              a.sidebar-link(href='/babyClockIn') Clocked-In Baby
            li.sidebar-item
              a.sidebar-link(href='/clockingOutList') Clocked-Out Baby
        li.sidebar-item
          a.sidebar-link.collapsed.text-bg-light(href='#' data-bs-target='#pages' data-bs-toggle='collapse' aria-expanded='false')
            i.fa-solid.fa-file-lines.pe-2
            |                           Manage Sitters
          ul#pages.sidebar-dropdown.list-unstyled.collapse(data-bs-parent='#sidebar')
            li.sidebar-item
              a.sidebar-link(href='/sittersRegister') Register new Sitter
            li.sidebar-item
              a.sidebar-link(href='/sitters') View All Sitters
            li.sidebar-item
              a.sidebar-link(href='/sittersPresent') Present Sitters
            li.sidebar-item
              a.sidebar-link(href='/sittersAbsent') Absent Sitters
        li.sidebar-item
          a.sidebar-link.collapsed.text-bg-light(href='#' data-bs-target='#posts' data-bs-toggle='collapse' aria-expanded='false')
            i.fa-solid.fa-file-lines.pe-2
            |                           Manage Procurement
          ul#posts.sidebar-dropdown.list-unstyled.collapse(data-bs-parent='#sidebar')
            li.sidebar-item
              a.sidebar-link(href='/procurementRegister') Register New Procurement Item
            li.sidebar-item
              a.sidebar-link(href='/procurementView') View Procurement Items
            li.sidebar-item
              a.sidebar-link(href='/itemAvailableRegistered') Available Items
            li.sidebar-item
              a.sidebar-link(href='/itemFinishedRegistered') Finished Items
        li.sidebar-item
          a.sidebar-link.collapsed.text-bg-light(href='#' data-bs-target='#posts' data-bs-toggle='collapse' aria-expanded='false')
            i.fa-solid.fa-file-lines.pe-2
            |                             Reports & Analytics
          ul#posts.sidebar-dropdown.list-unstyled.collapse(data-bs-parent='#sidebar')
            li.sidebar-item
              a.sidebar-link(href='/income') Income Register
            li.sidebar-item
              a.sidebar-link(href='/incomeList') View Incomes
            li.sidebar-item
              a.sidebar-link(href='/expense') Expense Register
            li.sidebar-item
              a.sidebar-link(href='/expenseList') View Expenses
        li.sidebar-item
          a.sidebar-link.collapsed.text-bg-light(href='#' data-bs-target='#posts' data-bs-toggle='collapse' aria-expanded='false')
            i.fa-solid.fa-file-lines.pe-2
            |                             Shop
          ul#posts.sidebar-dropdown.list-unstyled.collapse(data-bs-parent='#sidebar')
            li.sidebar-item
              a.sidebar-link(href='/dollsRegister') Doll Register
            li.sidebar-item
              a.sidebar-link(href='/dolls') View Dolls
               
        li.sidebar-item
          a.sidebar-link.collapsed(href='#' data-bs-target='#auth' data-bs-toggle='collapse' aria-expanded='false')
            i.fa-regular.fa-user.pe-2
            |                             Auth
          ul#auth.sidebar-dropdown.list-unstyled.collapse(data-bs-parent='#sidebar')
            li.sidebar-item
              a.sidebar-link(href='/welcome') Logout
            li.sidebar-item
              a.sidebar-link(href='/createAccount') Register Admin
  .main
    nav.navbar.navbar-expand.px-3.border-bottom
      button#sidebar-toggle.btn(type='button')
        span.navbar-toggler-icon
      .navbar-collapse.navbar
        ul.navbar-nav
          li.nav-item.dropdown
            a.nav-icon.pe-md-0(href='#' data-bs-toggle='dropdown')
              img.avatar.img-fluid.rounded(src='/images/lady-teacher.jpeg' alt='')
            .dropdown-menu.dropdown-menu-end
              a.dropdown-item(href='/welcome') Logout
    main.content.px-3.py-2
      .container
        // Content
        h1.mb-4 Income Register Form
        form#registrationForm(action='/income' method='POST')
            .mb-3
            label.form-label(for='date') Date
            input#date.form-control(type='date' name='date' )
            .mb-3
            label.form-label(for='category') Category
            select#category.form-select( name= 'category' )
                option(value='') Select Category
                option(value='babies_fees') Babies Fees
                option(value='doll_stall') Doll Stall
                option(value='donations') Donations
                option(value='others') Others
            .mb-3
            label.form-label(for='totalIncome') Total Income Earned Per Day
            input#totalIncome.form-control(type='number' name='totalIncome' )
            .mb-3
            label.form-label(for='comment') Comment
            input#comment.form-control(type='text' name='comment' )
            button.btn.btn-success#register(type='submit' value='Register') Submit
            
    a.theme-toggle(href='#')
      i.fa-regular.fa-moon
      i.fa-regular.fa-sun
    footer.footer
      .container-fluid
        .row.text-muted
          .col-6.text-start
            p.mb-0
              a.text-muted(href='#')
                strong
                  p &copy; 2024 All Rights Reserved. DayStar Daycare &amp; kindergarten 
          .col-6.text-end
            ul.list-inline
              li.list-inline-item
                a.text-muted(href='#') Contact
              li.list-inline-item
                a.text-muted(href='#') About Us
              li.list-inline-item
                a.text-muted(href='#') Terms
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js')
script(src='//income.js')

