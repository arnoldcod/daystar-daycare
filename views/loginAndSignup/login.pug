doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Admin Login
    // cdn bootstrap css
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/login.css')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container
        a.navbar-brand(href='#') Daystar Daycare 
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link.active(href='#') Home
            li.nav-item
              a.nav-link(href='#') About
            li.nav-item
              a.nav-link(href='#') Contact
    main#main-div.main-div
      #logo-nav-parent
        
      .row-login
        #col.col1
        #col.col2
          // loginform
          .main
            h3 Admin Login
            form#loginForm(action="/login" method="POST")
              label(for='email') Email:
              input#email(type='email' name='email' placeholder='Enter your Email' required='')
              label(for='password') Password:
              input#password(type='password' name='password' placeholder='Enter your Password' required='')
              .wrap
                button(type='submit') Login
            p
              | Not registered?
              a(href='/createAccount' style='text-decoration: none;') Create an account
        #col.col3
      #footer.footer.text-center.py-5
        .fid_box1
          h3 Find us
          ul.location_icon
            li
              a(href='#')
                i.fa.fa-map-marker(aria-hidden='true')
              br
              |  kabalagala
            li
              a(href='#')
                i.fa.fa-phone(aria-hidden='true')
              br
              | (+71) 1234567890
              br
              | (+71) 1234567890
            li
              a(href='#')
                i.fa.fa-envelope(aria-hidden='true')
              br
              | demo@gmail.com
        .copyright
          .container
            .row
              .col-md-6
                p &copy; 2024 All Rights Reserved. DayStar Daycare &amp; kindergarten
    // cdn bootstrap js
    script(src='https://kit.fontawesome.com/01943d9418.js' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js')
    script(src='/includes-navbar/navbar.js')
    script(src='/public/js/login.js')
